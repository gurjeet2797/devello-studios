                className={classNames(
                  'rounded-2xl border p-4 text-left shadow-sm transition hover:shadow',
                  isDark
                    ? 'border-white/10 bg-white/5 text-white hover:border-white/20'
                    : 'border-gray-200 bg-white/80 text-gray-900 hover:border-gray-300',
                  form.industry === option.id
                    ? isDark
                      ? 'ring-2 ring-white/40'
                      : 'ring-2 ring-black/30'
                    : null
                )}
              >
                <div className="font-medium">{option.label}</div>
                <div className={`mt-1 text-sm ${isDark ? 'text-white/60' : 'text-gray-500'}`}>{option.helper}</div>
              </button>
            ))}
          </div>

          {form.industry ? (
            <div className="space-y-2">
              <Label className="text-sm font-medium">Services (choose a few)</Label>
              <MultiSelect
                options={SUBSERVICES[form.industry] || []}
                values={form.subservices}
                onChange={(values) =>
                  setForm((current) => ({
