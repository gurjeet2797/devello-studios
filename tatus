    }
  });

  const steps = useMemo(() => [
    {
      key: 'industry',
      title: 'What do you do?',
      subtitle: 'Pick your industry and a few services.',
      required: () => Boolean(form.industry),
      content: (
        <div className="space-y-6">
          <div className="grid grid-cols-1 gap-3 sm:grid-cols-2">
            {INDUSTRIES.map((option) => (
              <button
                key={option.id}
                type="button"
                onClick={() =>
